            android:title="Klassen aktualisieren" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Benachrichtigungen">
        <SwitchPreference
            android:defaultValue="true"
            android:key="enable_notifications"
            android:title="Benachrichtigungen" />
    </PreferenceCategory>
</PreferenceScreen>